@using Domain;
@using MudBlazor

<div style="grid-row-start:8; grid-row-end:10; grid-column-start:1; grid-column-end:5;">
    <div style="text-align:center; padding:0.6rem;">Electron configuration blocks</div>
    <div style="display:flex; justify-content:center; align-items:center;">
        <div style="display:grid; grid-template-columns: repeat(18, 1fr); grid-template-rows: repeat(9, 1fr); width:16rem; height:10rem;">
            <div style="background-color:var(--block-s-color); border-width: 1px 1px 0 1px; border-color:#000; border-style:solid;"></div>
            <div style="background-color:var(--block-s-color); grid-column:18; border-width:1px 1px 0 1px; border-color:#000; border-style:solid;"></div>
            <div style="background-color:var(--block-s-color); grid-row:2; grid-column:1; border-width:0 0 0 1px; border-color:#000; border-style:solid;"></div>
            <div style="background-color:var(--block-s-color); grid-row:2; grid-column:2; border-width:1px 1px 0 0; border-color:#000; border-style:solid;"></div>
            <div style="background-color:var(--block-s-color); grid-row-start:3; grid-row-end:8; grid-column-start:1; grid-column-end:3; border-width:0 1px 1px 1px; border-color:#000; border-style:solid; display:flex; align-items:flex-end; padding:0.2rem;">s</div>
            <div style="background-color:var(--block-d-color); grid-row-start:4; grid-row-end:8; grid-column-start:3; grid-column-end:13; border-width:1px 0 1px 0; border-color:#000; border-style:solid; display:flex; align-items:flex-end; padding:0.2rem;">d</div>
            <div style="background-color:var(--block-p-color); grid-row-start:2; grid-row-end:8; grid-column-start:13; grid-column-end:19; border-width: 1px 1px 1px 1px; border-color:#000; border-style:solid; display:flex; align-items:flex-end; padding:0.2rem;">p</div>
            <div style="background-color:var(--block-f-color); grid-row-start:8; grid-row-end:10; grid-column-start:3; grid-column-end:19; border-width: 0 1px 1px 1px; border-color:#000; border-style:solid; display:flex; align-items:flex-end; padding:0.2rem;">f</div>
        </div>
    </div>
</div>